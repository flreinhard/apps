<?xml version="1.0" encoding="ISO-8859-1" ?>
<database>
 <name>*dbname*</name>
 <create>true</create>
 <overwrite>false</overwrite>

 <charset>latin1</charset>

 <table>

  <name>*dbprefix*notifications</name>

  <declaration>

   <field>
    <name>id</name>
	<autoincrement>true</autoincrement>
	<type>integer</type>
	<notnull>true</notnull>
	<length>4</length>
   </field>

   <field>
    <name>class</name>
    <type>integer</type>
    <notnull>true</notnull>
    <length>4</length>
   </field>

   <field>
    <name>uid</name>
    <type>text</type>
    <notnull>true</notnull>
    <length>64</length>
   </field>

   <field>
    <name>read</name>
    <type>boolean</type>
    <default>false</default>
    <notnull>true</notnull>
   </field>

   <field>
    <name>moment</name>
    <type>timestamp</type>
    <default>1970-01-01 00:00:00</default>
    <notnull>true</notnull>
   </field>

  </declaration>

 </table>
 
 <table>

  <name>*dbprefix*notification_params</name>

  <declaration>

   <field>
    <name>nid</name>
	<type>integer</type>
	<default>0</default>
	<notnull>true</notnull>
	<length>4</length>
   </field>

   <field>
    <name>key</name>
    <type>text</type>
    <notnull>true</notnull>
    <length>64</length>
   </field>

   <field>
    <name>value</name>
    <type>text</type>
    <default></default>
    <notnull>true</notnull>
    <length>255</length>
   </field>

  </declaration>

 </table>
 
 <table>

  <name>*dbprefix*notification_classes</name>

  <declaration>

   <field>
    <name>id</name>
	<autoincrement>true</autoincrement>
	<type>integer</type>
	<notnull>true</notnull>
	<length>4</length>
   </field>

   <field>
    <name>appid</name>
    <type>text</type>
    <notnull>false</notnull>
    <length>255</length>
   </field>

   <field>
    <name>name</name>
    <type>text</type>
    <notnull>true</notnull>
    <length>64</length>
   </field>

   <field>
    <name>summary</name>
    <type>text</type>
    <default></default>
    <notnull>true</notnull>
    <length>64</length>
   </field>

   <field>
    <name>content</name>
    <type>text</type>
    <default></default>
    <notnull>true</notnull>
    <length>255</length>
   </field>
   
   <index>
    <name>app_class</name>
    <unique>true</unique>
    <field>
     <name>appid</name>
    </field>
    <field>
	 <name>name</name>
    </field>
   </index>

  </declaration>

 </table>
 
 <table>
 
  <name>*dbprefix*notification_blacklist</name>

  <declaration>

   <field>
    <name>uid</name>
    <type>text</type>
    <notnull>true</notnull>
    <length>64</length>
   </field>

   <field>
    <name>class</name>
    <type>integer</type>
    <notnull>true</notnull>
    <length>4</length>
   </field>

  </declaration>

 </table>
</database>
